<script>
(function () {
  const PASSWORD = "NDRN022426";

  if (sessionStorage.getItem("mdbook-auth") === "ok") return;

  document.addEventListener("DOMContentLoaded", function () {
    const overlay = document.createElement("div");
    overlay.style = `
      position: fixed;
      inset: 0;
      background: #111;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 99999;
      font-family: sans-serif;
    `;

    overlay.innerHTML = `
      <div>
        <h2>Password Required</h2>
        <input type="password" id="pw" style="padding:8px;">
        <button id="go" style="padding:8px;">Enter</button>
      </div>
    `;

    document.body.appendChild(overlay);

    document.getElementById("go").onclick = function () {
      const val = document.getElementById("pw").value;
      if (val === PASSWORD) {
        sessionStorage.setItem("mdbook-auth", "ok");
        overlay.remove();
      } else {
        alert("Incorrect password");
      }
    };
  });
})();
</script>